{
    "id": "kanagawa",
    "name": "Kanagawa",
    "type": "dark",
    "version": "1.0.0",
    "description": "Kanagawa - inspired by Katsushika Hokusai's wave painting",
    "colors": {
        "background": {
            "primary": "#1f1f28",
            "secondary": "#16161d",
            "card": "rgba(54, 54, 70, 0.85)",
            "cardHover": "rgba(84, 84, 109, 0.9)"
        },
        "accent": {
            "unreadBadge": "#957fb8",
            "unreadBadgeText": "#1f1f28",
            "readBadge": "#98bb6c",
            "link": "#7e9cd8",
            "hoverAccent": "#7fb4ca",
            "feedsUnreadText": "#957fb8"
        },
        "text": {
            "primary": "#dcd7ba",
            "secondary": "#c8c093",
            "dimmed": "#727169",
            "status": "#7e9cd8"
        },
        "border": {
            "card": "rgba(84, 84, 109, 0.6)",
            "cardHover": "rgba(126, 156, 216, 0.4)",
            "divider": "rgba(84, 84, 109, 0.4)"
        }
    },
    "typography": {
        "fontFamily": "'Fira Code', 'JetBrains Mono', 'Source Code Pro', Menlo, monospace",
        "sizes": {
            "sectionHeader": "11px",
            "feedItem": "13px",
            "badge": "11px",
            "articleTitle": "16px",
            "articleSubtitle": "14px",
            "preview": "13px",
            "metadata": "11px"
        },
        "weights": {
            "regular": 400,
            "semibold": 600,
            "bold": 700
        },
        "lineHeights": {
            "compact": 1.4,
            "normal": 1.5,
            "relaxed": 1.6
        }
    },
    "spacing": {
        "cardMargin": "12px",
        "cardPadding": "16px",
        "sectionSpacing": "16px",
        "itemLineHeight": 1.6,
        "gapSmall": "8px",
        "gapMedium": "12px",
        "gapLarge": "16px"
    },
    "borderRadius": {
        "card": "10px",
        "badge": "4px",
        "thumbnail": "6px"
    },
    "shadows": {
        "card": "0 4px 16px rgba(0, 0, 0, 0.25)",
        "cardHover": "0 8px 24px rgba(0, 0, 0, 0.35)",
        "thumbnail": "0 2px 8px rgba(0, 0, 0, 0.3)"
    },
    "effects": {
        "glassBlur": "blur(8px)",
        "backdropFilter": "blur(8px)",
        "transitionDuration": "150ms",
        "transitionEasing": "ease-out"
    }
}