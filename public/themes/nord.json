{
    "id": "nord",
    "name": "Nord",
    "type": "dark",
    "version": "1.0.0",
    "description": "Nord - an arctic, north-bluish color palette",
    "colors": {
        "background": {
            "primary": "#2e3440",
            "secondary": "#3b4252",
            "card": "rgba(67, 76, 94, 0.85)",
            "cardHover": "rgba(76, 86, 106, 0.9)"
        },
        "accent": {
            "unreadBadge": "#b48ead",
            "readBadge": "#a3be8c",
            "link": "#88c0d0",
            "hoverAccent": "#8fbcbb"
        },
        "text": {
            "primary": "#eceff4",
            "secondary": "#e5e9f0",
            "dimmed": "#4c566a",
            "status": "#88c0d0"
        },
        "border": {
